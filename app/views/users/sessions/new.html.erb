<script>
  $(document).ready(function(){
     $('.modal').modal();
  });
</script>
<div class="wrapper">
     <div class="landing-img">
        <%= image_tag "airplanner-logo-white.png" ,:class => "logo" %>
     </div>
     <div class="options">
          <h4 class="welcome"> Welcome to Airplanner! </h4>
          <p> Make your planning easy and enjoyable.</p>
          <a class="waves-effect waves-light btn-large login-landing-page btn1" href="#modal3">Guest</a>
          <a class="waves-effect waves-light btn-large login-landing-page btn2" href="#modal1">Log in</a>
          <a class="waves-effect waves-light btn-large login-landing-page signup btn3" href="#modal2" >Sign up</a>
     <div id="modal1" class="modal">
      <div class="modal-content">
        <h5>Log in</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <label>Email:</label>
          <%= f.email_field :email, autofocus: true %>
          <label>Password:</label>
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.submit "Log in" %>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>

    <div id="modal2" class="modal">
     <div class="modal-content">
       <h5>Sign Up</h5>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name))  do |f| %>
         <label>Name:</label>
         <%= f.text_field :name ,class: "signup_field" %><br>
         <label>*Email:</label>
         <%= f.email_field :email %>
         <label>*Password:</label>
         <%= f.password_field :password, autocomplete: "off" %>
         <label>*Confirm password:</label>
         <%= f.password_field :password_confirmation, autocomplete: "off" %>
         <%= f.submit "Sign Up" %>
       <% end %>
      </div>
   </div>

   <div id="modal3" class="modal">
    <div class="modal-content">
      <p> Please remember you cannot save any plans when logged in as guest </p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true,class:"guestlogin", value:"guest@gmail.com"%>
        <%= f.password_field :password, autocomplete: "off" ,class:"guestlogin",value:"asdfgh"%>
        <%= f.submit "Got it", class:"center-button" %>
      <% end %>
    </div>
  </div>

  </div>
